                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/gallerySecondPhoto"
                android:src="@drawable/kolaz"

                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
