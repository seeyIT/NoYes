<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wholeJobLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:padding="4dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programista"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/jobCompanyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polyslash"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/jobPlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krakow"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/jobTypeTextView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#1bc41b"
                android:gravity="center"
                android:padding="4dp"
                android:text="Praca stala"

                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/jobDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_weight="4"
                android:gravity="bottom|right"
                android:text="12:12:2003r"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>